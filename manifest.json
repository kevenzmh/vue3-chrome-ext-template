{
  "manifest_version": 3,
  "name": "Test Replacer",
  "description": "数据替换测试工具",
  "version": "2.0.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.google.com/*",
    "http://*.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "http://*.google.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/ajaxhook.min.js"
      ],
      "matches": [
        "https://*.google.com/*",
        "http://*.google.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
